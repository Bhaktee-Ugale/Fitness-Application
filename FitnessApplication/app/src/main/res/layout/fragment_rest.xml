<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:paddingVertical="@dimen/_40sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take a rest"
                    android:textSize="@dimen/_30sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/restTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="10"
                    android:textSize="@dimen/_40sdp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/skipRestBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="skip"
                    android:background="@drawable/roundbutton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_30sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/nextExerciseCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:text="(2/20)"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/nextExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:text="Jumping jacks"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/nextExerciseTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:text="00:30"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="2"/>


    </LinearLayout>


</FrameLayout>